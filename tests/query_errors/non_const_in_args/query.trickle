define query add
with
  add = [1,2,3]
query
  use std::random;
  define script rand
  with
    add = args.add[random::integer(0, 3)]
  script
    event + add
  end;
  create script rand;

  # select event + args.add[random::integer(0, 3)] from in into add;
  select event from in into rand;
  select event from rand into out;
end;
